{
  "name": "biskaken-backend",
  "type": "application",
  "buildType": "docker",
  "dockerfile": "Dockerfile.backend",
  "repository": {
    "url": "https://github.com/plunoo/biskakenauto.git",
    "branch": "main",
    "buildPath": "."
  },
  "network": {
    "mode": "internal"
  },
  "environment": {
    "NODE_ENV": "production",
    "PORT": "5000",
    "APP_URL": "https://api.biskakenauto.rpnmore.com",
    "CORS_ORIGINS": "https://biskakenauto.rpnmore.com",
    "DATABASE_URL": "file:./dev.db",
    "JWT_SECRET": "default-insecure-secret-change-in-production"
  },
  "healthcheck": {
    "enabled": true,
    "path": "/health",
    "interval": 30000
  },
  "resources": {
    "memory": "512MB",
    "cpu": "0.5"
  }
}