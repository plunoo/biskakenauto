# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=biskaken_auto
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_SSL=true

# JWT Secret
JWT_SECRET=your_super_secure_jwt_secret_key_here

# CORS Origins (comma-separated)
CORS_ORIGINS=https://biskakenauto.rpnmore.com,https://biskakenauto.rpnmore.com:3000

# API Configuration
API_VERSION=1.0.0

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Mobile Money Configuration (for Ghana)
MOMO_API_KEY=your_mobile_money_api_key
MOMO_API_SECRET=your_mobile_money_secret

# AI Services Configuration
OPENAI_API_KEY=your_openai_key_if_needed
GEMINI_API_KEY=your_gemini_key_if_needed