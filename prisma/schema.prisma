// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// SQLite-compatible enums as String fields

model User {
  id            String      @id @default(uuid())
  email         String      @unique
  phone         String?     @unique
  password      String
  name          String
  role          String      @default("STAFF")
  status        String      @default("ACTIVE")
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  assignedJobs  Job[]       @relation("AssignedMechanic")
  activityLogs  ActivityLog[]
  
  @@map("users")
}

model Customer {
  id        String    @id @default(uuid())
  name      String
  phone     String    @unique
  email     String?
  address   String?
  notes     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  vehicles  Vehicle[]
  jobs      Job[]
  invoices  Invoice[]
  
  @@map("customers")
}

model Vehicle {
  id          String    @id @default(uuid())
  customerId  String
  make        String
  model       String
  year        Int
  plateNumber String?   @unique
  vin         String?   @unique
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  customer    Customer  @relation(fields: [customerId], references: [id], onDelete: Cascade)
  jobs        Job[]
  
  @@map("vehicles")
}

model Job {
  id                  String      @id @default(uuid())
  jobNumber           String      @unique
  customerId          String
  vehicleId           String
  complaint           String
  diagnosis           String?
  aiDiagnosis         String?     // Store AI diagnosis results as JSON string
  status              String      @default("PENDING")
  priority            String      @default("MEDIUM")
  assignedTo          String?
  laborHours          Float?
  laborRate           Float?
  estimatedCost       Float?
  actualCost          Float?
  expectedCompletion  DateTime?
  startedAt           DateTime?
  completedAt         DateTime?
  notes               String?
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  
  customer            Customer    @relation(fields: [customerId], references: [id])
  vehicle             Vehicle     @relation(fields: [vehicleId], references: [id])
  assignedMechanic    User?       @relation("AssignedMechanic", fields: [assignedTo], references: [id])
  jobParts            JobPart[]
  invoices            Invoice[]
  
  @@map("jobs")
}

model JobPart {
  id        String   @id @default(uuid())
  jobId     String
  partId    String
  quantity  Int
  unitPrice Float
  total     Float
  createdAt DateTime @default(now())
  
  job       Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  part      Inventory @relation(fields: [partId], references: [id])
  
  @@map("job_parts")
}

model Inventory {
  id           String    @id @default(uuid())
  partName     String
  category     String
  stockQty     Int       @default(0)
  reorderLevel Int       @default(5)
  unitCost     Float
  sellingPrice Float
  supplier     String?
  notes        String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  jobParts     JobPart[]
  invoiceItems InvoiceItem[]
  
  @@map("inventory")
}

model Invoice {
  id            String         @id @default(uuid())
  invoiceNumber String         @unique
  jobId         String?
  customerId    String
  date          DateTime       @default(now())
  dueDate       DateTime?
  subtotal      Float
  tax           Float          @default(0)
  discount      Float          @default(0)
  total         Float
  status        String         @default("DRAFT")
  paymentMethod String?
  paymentDate   DateTime?
  paymentRef    String?
  notes         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  customer      Customer       @relation(fields: [customerId], references: [id])
  job           Job?           @relation(fields: [jobId], references: [id])
  items         InvoiceItem[]
  
  @@map("invoices")
}

model InvoiceItem {
  id          String   @id @default(uuid())
  invoiceId   String
  partId      String?
  description String
  quantity    Int
  unitPrice   Float
  total       Float
  
  invoice     Invoice   @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  part        Inventory? @relation(fields: [partId], references: [id])
  
  @@map("invoice_items")
}

model ActivityLog {
  id         String   @id @default(uuid())
  userId     String
  action     String
  entityType String
  entityId   String
  details    String? // Store details as JSON string
  createdAt  DateTime @default(now())
  
  user       User     @relation(fields: [userId], references: [id])
  
  @@map("activity_logs")
}

model ShopSettings {
  id         String   @id @default(uuid())
  shopName   String
  address    String?
  phone      String?
  email      String?
  logo       String?
  laborRate  Float    @default(50)
  taxRate    Float    @default(0)
  currency   String   @default("GHS")
  updatedAt  DateTime @updatedAt
  
  @@map("shop_settings")
}