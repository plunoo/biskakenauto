# Unified Dockerfile - Backend API Only (No Database)
# Simplified version for production deployment
FROM node:20-alpine AS builder

WORKDIR /app

# Install build dependencies
RUN apk add --no-cache python3 make g++

# Copy source code
COPY . .

# Install dependencies
RUN npm ci
RUN cd biskaken-auto-api && npm ci

# Build frontend
RUN npm run build:frontend

# Build backend  
RUN cd biskaken-auto-api && npm run build

# Copy frontend build to backend public directory
RUN mkdir -p biskaken-auto-api/public && cp -r dist/* biskaken-auto-api/public/

# Production stage
FROM node:20-alpine

WORKDIR /app

# Install runtime dependencies
RUN apk add --no-cache \
    bash \
    curl \
    libc6-compat

# Copy built application
COPY --from=builder /app/biskaken-auto-api ./

# Install production dependencies
RUN npm ci --production

# Create non-root user for the app
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 backend

# Create startup script
COPY --chown=backend:nodejs <<'EOF' /app/start-unified.sh
#!/bin/bash
set -e

echo "ðŸš€ Starting Biskaken Auto Services..."
echo "ðŸ“¦ Backend API + Frontend in Unified Container"

# Set production environment
export NODE_ENV="production"
export UNIFIED_CONTAINER="true"

echo "âœ… Production configuration ready"
echo "ðŸ”§ Mode: API server with test endpoints"

# Generate Prisma client
echo "ðŸ“Š Generating Prisma client..."
npx prisma generate

echo "ðŸ‘¤ Admin credentials configured via environment variables"
echo "ðŸŒ Starting Node.js server..."
echo "ðŸ”— Server URL: http://0.0.0.0:${PORT:-5000}"
echo "ðŸ  Frontend: http://0.0.0.0:${PORT:-5000}"
echo "ðŸ“¡ API: http://0.0.0.0:${PORT:-5000}/api"

# Start the application
echo "ðŸš€ Executing: node dist/server.js"
exec node dist/server.js
EOF

RUN chmod +x /app/start-unified.sh
RUN chown backend:nodejs /app/start-unified.sh

# Set proper permissions
RUN chown -R backend:nodejs /app

# Environment variables
ENV NODE_ENV=production
ENV PORT=5000
ENV HOSTNAME="0.0.0.0"

# Default admin credentials (override in production)
ENV ADMIN_EMAIL="admin@biskaken.com"
ENV ADMIN_PASSWORD="admin123"
ENV ADMIN_NAME="Admin User"
ENV JWT_SECRET="unified-container-default-jwt-secret-change-in-production"

# Default database URL (can be overridden)
ENV DATABASE_URL="postgresql://backend:password@localhost:5432/biskaken_auto"

EXPOSE 5000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:5000/health || exit 1

# Start everything
USER backend
CMD ["/app/start-unified.sh"]