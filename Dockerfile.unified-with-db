# Unified Dockerfile with PostgreSQL, Backend API, and Frontend
FROM node:20-alpine AS builder

WORKDIR /app

# Install PostgreSQL dependencies for building
RUN apk add --no-cache postgresql-dev python3 make g++

# Copy source code
COPY . .

# Install dependencies
RUN npm ci
RUN cd biskaken-auto-api && npm ci

# Build frontend
RUN npm run build:frontend

# Build backend  
RUN cd biskaken-auto-api && npm run build

# Copy frontend build to backend public directory
RUN mkdir -p biskaken-auto-api/public && cp -r dist/* biskaken-auto-api/public/

# Production stage with PostgreSQL
FROM node:20-alpine

WORKDIR /app

# Install system dependencies including PostgreSQL
RUN apk add --no-cache \
    postgresql \
    postgresql-contrib \
    su-exec \
    bash \
    curl \
    libc6-compat

# Create postgres user and initialize database
RUN adduser -D -s /bin/sh postgres
RUN mkdir -p /var/lib/postgresql/data /run/postgresql
RUN chown -R postgres:postgres /var/lib/postgresql /run/postgresql
RUN chmod 777 /run/postgresql

# Copy built application
COPY --from=builder /app/biskaken-auto-api ./

# Install production dependencies
RUN npm ci --production

# Create non-root user for the app
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 backend

# Create startup script
COPY --chown=backend:nodejs <<'EOF' /app/start-unified.sh
#!/bin/bash
set -e

# Database configuration
export PGUSER=postgres
export POSTGRES_DB=biskaken_auto
export POSTGRES_PASSWORD=postgres_password_$(date +%s | sha256sum | head -c 16)

echo "ðŸš€ Starting Unified Biskaken Auto Services..."
echo "ðŸ“¦ Initializing PostgreSQL database..."

# Initialize PostgreSQL
su-exec postgres initdb -D /var/lib/postgresql/data

# Start PostgreSQL in background
su-exec postgres pg_ctl -D /var/lib/postgresql/data -l /var/lib/postgresql/logfile start

# Wait for PostgreSQL to be ready
echo "â³ Waiting for PostgreSQL to start..."
while ! su-exec postgres pg_isready; do
    sleep 1
done

# Create database and user
su-exec postgres psql -c "CREATE DATABASE ${POSTGRES_DB};" || true
su-exec postgres psql -c "CREATE USER backend WITH PASSWORD '${POSTGRES_PASSWORD}';" || true
su-exec postgres psql -c "GRANT ALL PRIVILEGES ON DATABASE ${POSTGRES_DB} TO backend;" || true
su-exec postgres psql -c "ALTER USER backend CREATEDB;" || true

# Set database URL for the application
export DATABASE_URL="postgresql://backend:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}"

echo "âœ… PostgreSQL initialized successfully"
echo "ðŸ”§ Database URL: postgresql://backend:****@localhost:5432/${POSTGRES_DB}"

# Run database migrations
echo "ðŸ“Š Running database migrations..."
npx prisma generate
npx prisma migrate deploy || npx prisma db push

# Create admin user if environment variables are set
if [ -n "$ADMIN_EMAIL" ] && [ -n "$ADMIN_PASSWORD" ]; then
    echo "ðŸ‘¤ Admin credentials configured via environment variables"
fi

echo "ðŸŒ Starting Node.js server..."
echo "ðŸ”— Server URL: http://0.0.0.0:${PORT:-3000}"
echo "ðŸ  Frontend: http://0.0.0.0:${PORT:-3000}"
echo "ðŸ“¡ API: http://0.0.0.0:${PORT:-3000}/api"

# Start the application
exec node dist/server.js
EOF

RUN chmod +x /app/start-unified.sh
RUN chown backend:nodejs /app/start-unified.sh

# Set proper permissions
RUN chown -R backend:nodejs /app

# Environment variables
ENV NODE_ENV=production
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"
ENV DATABASE_URL="postgresql://backend:password@localhost:5432/biskaken_auto"

# Default admin credentials (can be overridden)
ENV ADMIN_EMAIL="admin@biskaken.com"
ENV ADMIN_PASSWORD="admin123"
ENV ADMIN_NAME="Admin User"
ENV JWT_SECRET="unified-container-default-jwt-secret-change-in-production"

EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:3000/health || exit 1

# Start everything
USER backend
CMD ["/app/start-unified.sh"]