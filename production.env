# Production Environment Variables for Dokploy Deployment
# Copy these values to Dokploy environment variables section

# Database Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/biskaken_auto

# Application Configuration
NODE_ENV=production
PORT=5000
APP_URL=https://biskakenauto.rpnmore.com

# JWT Configuration
JWT_SECRET=your-super-secure-production-jwt-secret-key-change-this
JWT_EXPIRES_IN=7d

# Admin Credentials (Set these in Dokploy manually)
ADMIN_EMAIL=admin@biskaken.com
ADMIN_PASSWORD=SecureAdminPassword123!
ADMIN_NAME=Admin User

# External API Keys (Set these in Dokploy manually)
# OpenAI for AI features
OPENAI_API_KEY=your-openai-api-key

# Twilio for SMS notifications
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Paystack for payments
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key

# Cloudinary for file uploads
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# USDT Wallet (if using crypto payments)
USDT_WALLET_ADDRESS=your-usdt-wallet-address

# SMS Configuration
SMS_SENDER_ID=BISKAKEN
SMS_ENABLED=true

# Database Connection Details (for Dokploy)
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_NAME=biskaken_auto