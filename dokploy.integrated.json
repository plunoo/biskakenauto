{
  "name": "biskaken-backend-integrated",
  "description": "Biskaken Auto - Integrated Backend with Database",
  "version": "5.0.0",
  "type": "application",
  "framework": "docker",
  "dockerfile": "server/Dockerfile.dokploy-integrated",
  "buildArgs": {},
  "environment": {
    "NODE_ENV": "production",
    "PORT": "5000",
    "HOST": "0.0.0.0",
    "DB_HOST": "localhost",
    "DB_PORT": "5432",
    "DB_NAME": "biskaken_auto", 
    "DB_USER": "postgres",
    "DB_PASSWORD": "${DB_PASSWORD}",
    "JWT_SECRET": "${JWT_SECRET}",
    "CORS_ORIGINS": "https://biskakenauto.rpnmore.com",
    "DEMO_MODE": "false"
  },
  "ports": [
    {
      "containerPort": 5000,
      "protocol": "tcp"
    }
  ],
  "volumes": [
    {
      "hostPath": "/var/lib/postgresql/data",
      "containerPath": "/var/lib/postgresql/data",
      "type": "volume"
    }
  ],
  "healthcheck": {
    "enabled": true,
    "path": "/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "resources": {
    "limits": {
      "memory": "1Gi",
      "cpu": "1000m"
    },
    "requests": {
      "memory": "512Mi", 
      "cpu": "500m"
    }
  },
  "restart": "unless-stopped"
}